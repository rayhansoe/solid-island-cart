generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}
model Product {
  id              String             @id @default(uuid())
  name            String
  category        String
  stock           Int
  price           Float
  imgUrl          String
  cartItem        CartItem[]
  transactionItem TransactionItem[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  popularity      Int
}

model CartItem {
  id        String    @id @default(uuid())
  quantity  Int
  product   Product  @relation(fields: [productId], references: [id])
  productId String 
  isChecked Boolean
  status    Boolean
  updatedAt DateTime
  createdAt DateTime

  @@index([productId])
}

model Transaction {
  id              String             @id @default(uuid())
  transactionItem TransactionItem[]
  updatedAt       DateTime @updatedAt
  createdAt       DateTime @default(now())
  quantities      Int
  totalPrice      Float
}

model TransactionItem {
  id            String       @id @default(uuid())
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId String 
  quantity      Int
  product       Product     @relation(fields: [productId], references: [id])
  productId     String 
  updatedAt     DateTime @default(now())
  createdAt     DateTime @updatedAt

  @@index([transactionId])
  @@index([productId])
}
